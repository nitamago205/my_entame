<div class='container'>
  <div class='row'>
    <h2 class="my-5 bg-light">投稿一覧</h2>
  </div>
  <div class="row">
    <% if user_signed_in? %>
      <%= link_to new_post_path, class: "text-dark mb-2" do %>
        <i class="fas fa-plus"></i> 新規投稿登録
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <%= search_form_for @q do |f| %>
      <%= f.label :title, "投稿タイトル検索" %>
      <%= f.search_field :title_cont %>

      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id_eq, @genres, :id, :genre_name, include_blank: '指定なし' %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class="row">
      <%= sort_link(@q, :created_at, "古い順/新しい順") %> |
      <%= sort_link(@q, :rate, "レート低い順/高い順") %>
      <%= render 'index', posts: @posts %>
  </div>
</div>