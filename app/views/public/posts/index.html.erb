<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>投稿一覧</h2>

      <div class="row">
        <%= link_to new_post_path, class: "text-dark mb-2" do %>
          <i class="fas fa-plus"></i> 新規投稿登録
        <%end%>
      </div>

      <%= link_to "新しい順", posts_path(latest: "true") %> |
      <%= link_to "古い順", posts_path(old: 'true') %> |
      <%= link_to "レートの高い順", posts_path(star_count: 'true') %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>タイトル</th>
            <th>本文</th>
            <th>レート</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to(post.user) do %>
                <%= image_tag post.user.get_profile_image, size:'50x50' %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
              <td><%= post.body %></td>
              <!--<td class=<%#= "favorite-" + post.id.to_s %> >-->
              <!--    <%#= render "favorites/btn", post: post %>-->
              <!--</td>-->
              <!--<td><%#= render "post_comments/counter", post: post %></td>-->
              <td><%= render "static_rate", post: post %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>