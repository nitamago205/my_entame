<table class='table table-hover table-inverse'>
  <thead>
    <tr class="bg-light">
      <th>ユーザー名</th>
      <th>タイトル</th>
      <th>ジャンル</th>
      <th>いいね数</th>
      <th>レート</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to(post.user) do %>
            <%= image_tag post.user.get_profile_image, size:'40x40', class:"profile_image" %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.genre.genre_name %></td>
        <td id="favorite_buttons_<%= post.id %>">
          <% if user_signed_in? %>
            <%= render "public/favorites/btn", post: post %>
          <% else %>
            <i class="fas fa-heart" aria-hidden="true"></i>
            <%= post.favorites.count %>
          <% end %>
        </td>
        <td><%= render "public/posts/static_rate", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>