<div class="row">
  <% users.each do |user| %>
    <div class="col-xs-12 col-md-6 col-lg-4 mt-3">
      <div class = "card">
        <div class = "mt-3">
          <%= link_to (user) do %>
            <%= image_tag user.get_profile_image, size:'150x150', class:"profile_image" %>
          <% end %>
        </div>
        <div class = "card-body">
          <h5 class = "card-title text_omit">
            <%= link_to user.name, user %>
          </h5>
          <h6 class = "card-subtitle">
            <div>ユーザーID: <%= user.id %></div>
            <div>
              <td>フォロー数: <%= link_to user.followings.count, user_followings_path(user) %></td>
              <td>フォロワー数: <%= link_to user.followers.count, user_followers_path(user) %></td>
            </div>
          </h6>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="mt-3 mr-1 ml-1"><%= paginate users %></div>



