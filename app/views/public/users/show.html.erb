<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
      <%= render 'info', user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2></h2>
      <h3>投稿一覧</h3>
      <div class="row">
        <% if current_user == @user %>
          <%= link_to new_post_path, class: "text-dark mb-2" do %>
            <i class="fas fa-plus"></i> 新規投稿登録
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <%= search_form_for @q, url: user_path  do |f| %>
          <%= f.label :title, "投稿タイトル検索" %>
          <%= f.search_field :title_cont %>

          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id_eq, @genres, :id, :genre_name, include_blank: '指定なし' %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      <div class = "row">
        <%= sort_link(@q, :created_at, "古い順/新しい順") %> |
        <%= sort_link(@q, :rate, "レート低い順/高い順") %>
        <%= render 'public/posts/index', posts: @posts %>
      </div>
    </div>
  </div>
</div>
