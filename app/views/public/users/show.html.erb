<div class='main container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <div class = "row">
        <h3 class="heading my-4 w-100 text-center">ユーザー情報</h2>
      </div>
      <%= render 'info', user: @user %>
    </div>

    <div class='form-wrapper col-md-8 offset-md-1 mt-5'>
      <div class="row">
        <h3 class="sub_heading mb-4 ml-2"><%= @user.name %>の投稿一覧</h3>
      </div>
      <div class="row">
        <%= search_form_for @q, url: user_path  do |f| %>
          <%= f.search_field :title_cont, placeholder: "投稿タイトル検索" %>
          <%= f.label :genre_id, "ジャンル" %>
          <%= f.collection_select :genre_id_eq, @genres, :id, :genre_name, include_blank: '指定なし' %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      <div class = "row">
        <%= sort_link(@q, :created_at, "古い順/新しい順") %> |
        <%= sort_link(@q, :rate, "レート低い順/高い順") %>
        <%= render 'post_index', posts: @posts %>
      </div>
    </div>
  </div>
</div>
