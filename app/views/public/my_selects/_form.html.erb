<%= form_with model:[post, select] do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, placeholder: "タイトルをここに", class: "form-control mb-2" %>
    </div>
    <div class="form-group">
      <%= f.label :body, "本文" %>
      <%= f.text_area :body, placeholder: "本文をここに", class: "form-control mb-2" %>
    </div>

    <div class="form-group">
      <% if action_name == "new" %>
        <%= f.submit "マイセレクト追加", class: "btn btn-success" %>
      <% else %>
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      <% end %>
    </div>
  <%end%>