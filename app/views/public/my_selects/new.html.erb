<div class="container">
  <%= form_with model:[@post, @select] do |f| %>
    <div class="row">
      <h3 class="m-3 bg-light">新規マイセレクト</h3>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :title, "タイトル" %></div>
      <div class="col-6">
        <%= f.text_field :title, class: "form-control mb-2" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-2"><%= f.label :body, "本文" %></div>
      <div class="col-6">
        <%= f.text_area :body, class: "form-control mb-2" %>
      </div>
    </div>

    <div class="row my-5">
      <div class="col-2"></div>
      <div class="col-6 form-inline">
        <div class="mr-5">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <%end%>
</div>