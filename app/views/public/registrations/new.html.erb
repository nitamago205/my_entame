<div class="text-center mt-5 mb-5">
  <div class="form-wrapper mt-5 mb-5 col-11 col-md-6 col-xl-4">
    <h4 class="form-title mb-5">新規登録</h4>

    <%= form_with model: @user, url: users_sign_up_path, class: 'text-left mb-5' do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name, "ユーザー名" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス", class: 'mt-3' %><br />
        <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: 'mt-3' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード入力確認", class: 'mt-3' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions mt-5">
        <%= f.submit "新規登録", class: 'btn-lg btn-success btn-block' %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>

  </div>
</div>
