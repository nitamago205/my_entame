<div class="text-center mt-5 mb-5">
  <div class="form-wrapper mt-5 mb-5 col-11 col-md-6 col-xl-4">
    <h4 class="form-title mb-5">管理者ログイン</h4>
    <%= form_with model: @admin, url: admin_session_path, class: 'text-left mb-5' do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保存する" %>
        </div>
      <% end %>

      <div class="actions mt-3">
        <%= f.submit "ログイン", class: 'btn-lg btn-success btn-block' %>
      </div>
    <% end %>
    <%= render "admin/shared/links" %>
  </div>
</div>
