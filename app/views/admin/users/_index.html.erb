<div class="row">
  <% users.each do |user| %>
    <div class="col-xs-12 col-md-6 col-lg-4 mt-3">
      <div class = "card">
        <div class = "mt-3">
          <%= link_to admin_user_path(user) do %>
            <%= image_tag user.get_profile_image, size:'150x150', class:"profile_image" %>
          <% end %>
        </div>
        <div class = "card-body">
          <h5 class = "card-title text_omit">
            <%= link_to user.name, admin_user_path(user) %>
          </h5>
          <h6 class = "card-subtitle">
            <div>ユーザーID: <%= user.id %></div>
            <div>
              フォロー数: <%= user.followings.count %>
              フォロワー数: <%= user.followers.count %>
            </div>
            <% if user.is_deleted == false %>
              <div class="text-success">有効</div>
            <% elsif %>
              <div class="text-danger">退会</div>
            <% end %>
          </h6>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="mt-3 mr-1 ml-1"><%= paginate users %></div>