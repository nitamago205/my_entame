<div class="container">
  <div class="row">
    <h3 class="my-5 bg-light">ユーザー一覧</h3>
  </div>
  <div class="row">
    <%= search_form_for @q, url: admin_users_path do |f| %>
      <%= f.label :name, "ユーザー名検索" %>
      <%= f.search_field :name_cont %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class="row">
    <%= sort_link(@q, :created_at, "古い順/新しい順") %>
  </div>
  <div class="row mb-5">
    <table class="table table-border table-hover">
      <thead>
        <tr class="bg-light">
          <th>ユーザーID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= image_tag user.get_profile_image, size:'30x30' %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
              <% if user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% elsif %>
                <td class="text-danger">退会</td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>