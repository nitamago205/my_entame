<div class="container">
  <div class="row">
    <h3 class="my-5 bg-light">会員一覧</h3>
  </div>
  <div class="row mb-5">
    <table class="table table-border table-hover">
      <thead>
        <tr class="bg-light">
          <th>ユーザーID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
              <% if user.is_deleted == false %>
                <td class="text-success">有効</td>
              <% elsif %>
                <td class="text-danger">退会</td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>