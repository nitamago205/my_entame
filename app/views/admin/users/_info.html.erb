<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'157x157', class:"profile_image d-block mx-auto" %></tr>
  <tr>
    <th>ユーザーID</th>
    <th><%= user.id %></th>
  </tr>
  <tr>
    <th>ユーザー名</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= user.email %></th>
  </tr>
  <tr>
    <th>
      <div class="d-inline-block">フォロー数: </div><div class="d-inline-block"><%= user.followings.count %></div>
    </th>
    <th>
      <div class="d-inline-block">フォロワー数: </div><div class="d-inline-block"><%= user.followers.count %></div>
    </th>
  </tr>
  <tr>
    <th>ステータス</th>
    <th>
      <% if @user.is_deleted == false %>
        <div class="col-6 text-success">有効</div>
      <% elsif %>
        <div class="col-6 text-danger">退会</div>
      <% end %>
    </th>
  </tr>
</table>
<div class='row'>
  <div>
    <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success mr-5" %>
  </div>
  <div>
    <%= link_to "削除する", admin_user_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
  </div>
</div>
<div class="mt-3">
  <%= link_to "ユーザー一覧へ戻る", admin_users_path, class: "btn btn-primary" %>
</div>