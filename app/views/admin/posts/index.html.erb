<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>投稿一覧</h2>

      <%= link_to "新しい順", admin_posts_path(latest: "true") %> |
      <%= link_to "古い順", admin_posts_path(old: 'true') %> |
      <%= link_to "レートの高い順", admin_posts_path(star_count: 'true') %>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>タイトル</th>
            <th>ジャンル名</th>
            <th>いいね数</th>
            <th>レート</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to(post.user) do %>
                <%= image_tag post.user.get_profile_image, size:'50x50' %>
                <%= post.user.name %>
                <% end %>
              </td>
              <td><%= link_to post.title, admin_post_path(post), class: "post_#{post.id}" %></td>
              <td><%= post.genre.genre_name %></td>
              <td><i class="fas fa-heart"></i>︎<%= post.favorites.count %></td>
              <!--<td><%#= render "post_comments/counter", post: post %></td>-->
              <td><%= render "public/posts/static_rate", post: post %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>